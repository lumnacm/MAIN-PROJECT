<style>
    .ck-editor__editable_inline {
    min-height: 325px;
 }
</style>
<main id="main" class="main">
   <div class="pagetitle">
     <h1>Add Article</h1>
   </div>
 
   <section class="section">
     <div class="row">
       <div class="col-lg-12">
         <div class="card">
           <div class="card-body">
           
             <form  class="mt-3" id="article-form" action="/admin/article/add"  enctype="multipart/form-data" method="POST">
    <label>Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
    
    <label>Banner Image </label>
    <input type="file" name="Image" class="form-control" required>
    <input type="hidden" class="form-control" id="banner" name="banner">
    
    <label>Author</label>
    <input type="text" class="form-control" id="author" name="author" required>

    <div class="form-group">
        <label class="form-label" for="content">Content</label>
        <textarea class="form-control" id="editor" name="content" rows="4" required></textarea>
     </div>
      <button type="button" class="btn btn-dark mt-4" onclick="validateAndSubmit()">Save</button>
</form>


           </div>
         </div>
       </div>
     </div>
   </section>
 </main>
 
  <script src="https://cdn.ckeditor.com/ckeditor5/36.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>

<script>
    function validateAndSubmit() {
        let isValid = true;
        let errorMessage = "";

        const title = document.getElementById("title").value.trim();
        const authorName = document.getElementById("author").value.trim();
        const authorDesignation = document.getElementById("author").value.trim();
       

        if (!title) {
            isValid = false;
            errorMessage += "❌ Article Title is required.\n";
        }
        if (!authorName) {
            isValid = false;
            errorMessage += "❌ Author Name is required.\n";
        }
        if (!authorDesignation) {
            isValid = false;
            errorMessage += "❌ Author Designation is required.\n";
        }

        if (!isValid) {
            alert(errorMessage); // Show validation errors
        } else {
            document.getElementById("article-form").submit(); // Submit form if validation passes
        }
    }
</script>
