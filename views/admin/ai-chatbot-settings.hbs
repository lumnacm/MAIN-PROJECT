<main id="main" class="main">
   <div class="pagetitle">
     <h1>AI Chatbot Settings</h1>
   </div>
 
   <section class="section">
     <div class="row">
       <div class="col-lg-12">
         <div class="card">
           <div class="card-body">
             <h5 class="card-title">Manage AI Chatbot</h5>
             <form action="/admin/ai-chatbot-settings" method="POST">
               <div class="mb-3">
                 <label for="prompt" class="form-label">Chatbot Prompt</label>
                 <textarea id="prompt" name="prompt" class="form-control" rows="5" required>{{settings.prompt}}</textarea>
               </div>
               <button type="submit" class="btn btn-primary">Save Settings</button>
             </form>
           </div>
         </div>
       </div>
     </div>
   </section>
 </main>