<main id="main" class="main">
   <div class="pagetitle">
     <h1>Manage Articles</h1>
   </div>
 
   <section class="section">
     <div class="row">
       <div class="col-lg-12">
         <div class="card">
           <div class="card-body">
             <h5 class="card-title">Manage Articles</h5>
             <a href="/admin/article/add" class="btn btn-success">Add New Article</a>
              <div class="table-responsive" style="overflow: visible;">
             <table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each articles}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.author}}</td>
            <td>{{this.status}}</td>
            <td>
                <a href="/admin/article/edit/{{this._id}}" class="btn btn-primary">Edit</a>
                {{#if (eq this.status 'published')}}
                <form action="/admin/article/unpublish/{{this._id}}" method="POST" style="display:inline;">
                    <input type="hidden" name="status" value="draft">
                    <button type="submit" class="btn btn-warning">Unpublish</button>
                </form>
                {{else}}
                <form action="/admin/article/publish/{{this._id}}" method="POST" style="display:inline;">
                    <input type="hidden" name="status" value="published">
                    <button type="submit" class="btn btn-warning">Publish</button>
                </form>
                {{/if}}

                {{!-- <form action="/admin/article/publish/{{this._id}}" method="POST" style="display:inline;">
                    <input type="text" name="status" value="{{#if (eq this.status 'published')}}draft{{else}}published{{/if}}">
                    <button type="submit" class="btn btn-warning">{{#if (eq this.status 'published')}}Unpublish{{else}}Publish{{/if}} ;;{{this.status}}</button>
                </form> --}}
                <form action="/admin/article/delete/{{this._id}}" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr><td colspan="4">No articles available.</td></tr>
        {{/each}}
    </tbody>
</table>
</div>
           </div>
         </div>
       </div>
     </div>
   </section>
 </main>