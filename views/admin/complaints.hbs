<main id="main" class="main">
   {{!-- <div class="pagetitle">
     <h1>Manage Articles</h1>
   </div> --}}
 
   <section class="section">
     <div class="row">
       <div class="col-lg-12">
         <div class="card">
           <div class="card-body">
             <h5 class="card-title">Manage Complaints</h5>
            
              <div class="table-responsive" style="overflow: visible;">
             <table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Username</th>
            <th>Subject</th>
            <th>Complaints</th>
            <th>Mange</th>
        </tr>
    </thead>
    <tbody>
        {{#each cmp}}
        <tr>
            <td>{{formatDate this.createdAt}}</td>
            <td>{{this.username}}</td>
            <td>{{this.subject}}</td>
            <td>{{this.complaints}}</td>
            <td>
                <form action="/admin/complaints/delete/{{this._id}}" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{else}}
        <tr><td colspan="5" class="text-center">Not available.</td></tr>
        {{/each}}
    </tbody>
</table>
</div>
           </div>
         </div>
       </div>
     </div>
   </section>
 </main>