<main id="main" class="main">
   <div class="pagetitle">
     <h1>Profile</h1>
   </div>
 
   <section class="section">
     <div class="row">
       <div class="col-lg-12">
         <div class="card">
         <div class="card shadow p-4 mt-3">

            <div class="register-form mt-4">
                <h4 class="mb-5 text-left">My Profile</h4>
                {{#if adm}}
                <form action="/admin/edit-profile" method="post">
                    <div class="row g-1">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" type="text" name="Name" placeholder="{{adm.Name}}"
                                    >
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>

                        <input class="form-control" type="email" name="Email" value={{adm.Email}} >
                    </div>
                   
                    </div>

                </form>
                {{/if}}
                
            </div>

        </div>
         </div>
       </div>
     </div>
   </section>
 </main>
<style>
    label {
        font-size: 13px;
        margin-bottom: 10px;
    }
</style>
<!-- Login Wrapper Area -->
<div class="login-wrapper d-flex  align-items-center justify-content-center">
    <div class="container-lg">
        <div class="text-center px-4"><img class="login-intro-img" src="assets/img/bg-img/36.png" alt=""></div>
        <br><br><br>
        <!-- Register Form -->

        <div class="d-flex justify-content-between">
            <a href="/" class="btn btn-sm btn-dark">
                <i class="bi bi-arrow-left-short "></i> Back</a>
            {{#if user}}
            <a href="/edit-profile/{{user._id}}" class="btn btn-sm btn-primary">
                <i class="bi bi-pen "></i> Edit Profile</a>
            {{/if}}
        </div>

        

    </div>
</div>