<style>
    .header {
        background-color: black;
    }

    @media (min-width: 1200px) {

        .navmenu a,
        .navmenu a:focus {
            color: #ffffff;
            font-size: 15px;
            padding: 0 2px;
            font-family: var(--nav-font);
            font-weight: 400;
            display: flex;
            align-items: center;
            justify-content: space-between;
            white-space: nowrap;
            transition: 0.3s;
            position: relative;
        }
    }
</style>


<div class="page-content-wrapper pt-4 main-content">
    <div class="container-md">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Notification</h4>
             <a href="/psychiatrist/add-notification" class="btn btn-dark btn-sm mb-3">Send Notification</a>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table border table-bordered" id="dataTable">
                        <thead class="table-dark">
                                    <tr class="align-middle">
                                        <th scope="col">Date</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Message</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                         <tbody>
                                    {{#each notifications}}
                                    <tr class="align-middle">
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>{{this.userFname}}</td>
                                        <td>{{this.message}}</td>

                                        <td>
                                            <a href="/admin/delete-notification/{{this._id}}"
                                                onclick="return confirm('Are You Sure to Delete This ?')"
                                                class="btn btn-danger">Delete</a>
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>]


