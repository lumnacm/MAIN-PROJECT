<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="POST">
                    <label for="" class="mt-3">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}" required>

                    <label for="" class="mt-3">Category</label>
                    <input type="text" name="Category" class="form-control" value="{{product.Category}}" required>

                    <label for="" class="mt-3">Price</label>
                    <input type="text" name="Price" class="form-control" value="{{product.Price}}" required>

                    <label for="" class="mt-3">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}" required>

                    <label for="" class="mt-3">Image</label>
                    <img src="/images/product-images/{{product._id}}.png" alt=""
                        style="width: 5rem; margin-bottom: 8px;" id="imgView">
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>





<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="form-label" for="exampleInputText">Workspace Name</label>
                    <input class="form-control" id="exampleInputText" name="wname" value="{{workspace.Name}}"
                        type="text" placeholder="">
                </div>

                <div class="form-group">
                    <label class="form-label" for="exampleInputText">Available Seats</label>
                    <input class="form-control" id="exampleInputText" name="seat" value="{{workspace.Name}}" type="text"
                        placeholder="">
                </div>

                <div class="d-flex gap-2">

                    <div class="form-group w-100">
                        <label class="form-label" for="exampleInputText"> Price</label>
                        <input class="form-control" id="exampleInputText" name="Price" value="{{workspace.Name}}"
                            type="number" placeholder="">
                    </div>

                    <div class="form-group w-100">
                        <label class="form-label" for="defaultSelect">Select Format</label>
                        <select class="form-select form-control-clicked " id="defaultSelect" name="format"
                            aria-label="Default select example">
                            <option value="{{workspace.Name}}" selected="">{{workspace.Name}}</option>
                            <option value="hour">Per Hour</option>
                            <option value="day">Per Day</option>
                            <option value="month">Per Month</option>
                            <option value="year">Per Year</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="exampleInputText">Description</label>
                    <textarea class="form-control" id="exampleInputText" value="{{workspace.Name}}"
                        name="desc"></textarea>

                </div>

                <div class="form-group">
                    <label class="form-label" for="exampleInputText"> Locality</label>
                    <textarea class="form-control" name="baddress">{{workspace.Name}}</textarea>
                </div>

                {{!-- <div class="form-group">
                    <label class="form-label" for="inputDate">Date picker</label>
                    <input class="form-control" id="inputDate" type="date">
                </div> --}}

            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label class="form-label" for="exampleInputText">Workspace Image</label>
                    <input class="form-control" id="exampleInputText" name="Image" type="file">
                    <img src="/images/workspace-images/{{workspace._id}}.png" alt=""
                        style="width: 5rem; margin-bottom: 8px;" id="imgView">
                </div>

            </div>
        </div>
    </div>

</div>
<button type="submit" class="btn btn-dark mt-4">Add Workspace</button>



<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>