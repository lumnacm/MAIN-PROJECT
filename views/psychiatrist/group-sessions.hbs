<style>
    .header {
        background-color: black;
    }

    @media (min-width: 1200px) {

        .navmenu a,
        .navmenu a:focus {
            color: #ffffff;
            font-size: 15px;
            padding: 0 2px;
            font-family: var(--nav-font);
            font-weight: 400;
            display: flex;
            align-items: center;
            justify-content: space-between;
            white-space: nowrap;
            transition: 0.3s;
            position: relative;
        }
    }
</style>


<div class="page-content-wrapper pt-4 main-content">
    <div class="container-md">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Sessions</h4>
            <a href="/psychiatrist/add-group-session" class="btn btn-dark">+ Add New Session</a>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table border table-bordered" id="dataTable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Added Date</th>
                                <th>sessionName</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each sessions}}
                            <tr>
                                <td>{{incremented @index}}</td> 
                                <td>{{formatDate this.createdAt}}</td>
                                <td>{{this.sessionName}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function deletesession(id, wname) {
        Swal.fire({
            title: `Are you sure you want to delete "${wname}"?`,
            text: '',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#33ff68',
            cancelButtonColor: '#d29eee',
            confirmButtonText: 'Yes!',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the delete route if confirmed
                window.location.href = `/builder/delete-workspace/${id}`;
            }
        });
    }
</script>