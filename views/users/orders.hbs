<br><br>
<div class="container-md mt-3 p-5">
    <h4 class="mb-3">Your Bookings</h4>

    {{#if orders}}

    <div class="row">
        {{#each orders}}
        <div class="col-12 mb-3">
            <div class="card single-product-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="card-side-img">
                            <!-- Product Thumbnail--><a class="product-thumbnail d-block"
                                href="page-shop-details.html"><img
                                    src="/images/workspace-images/{{this.workspace._id}}.png" alt="" width="200px">
                                <!-- Badge--><span class="badge bg-primary">{{this.status}}</span></a>
                        </div>
                        <div class="card-content px-4 py-2">
                            <!-- Product Title--><a class="product-title d-block text-truncate mt-0"
                                href="page-shop-details.html">{{this.workspace.wname}}</a>
                            <!-- Product Price-->
                            <p class="">By : {{this.workspace.bname}}</p>
                            <!-- Add To Cart Button--><a class="btn btn-dark"
                                href="/view-ordered-workspaces/{{this._id}}">
                                View Details</a>
                            <a href="javascript:void(0);" onclick="canelorder('{{this._id}}')"
                                class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{else}}
    <br><br><br>
    <div class="container mt-5">
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">You Have Booked Nothing!</h4>
            <hr>
            <p class="mb-0">You need to book a session</p>
        </div>
        <a href="/" class="btn btn-primary w-25">Book Now</a>
    </div>
    {{/if}}
</div>


<script>
    function canelorder(id) {
        Swal.fire({
            title: `Are you sure to cancel this order?`,
            text: '',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#33ff68',
            cancelButtonColor: '#d29eee',
            confirmButtonText: 'Yes!',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the delete route if confirmed
                window.location.href = `/cancel-order/${id}`;
            }
        });
    }
</script>